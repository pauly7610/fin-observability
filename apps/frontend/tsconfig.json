{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // --- THIS IS THE CRITICAL PART ---
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
    // Note: Your screenshot shows paths like `apps/frontend/src/components`.
    // If your code is inside a `src` directory, use this instead:
    // "baseUrl": ".",
    // "paths": {
    //   "@/*": ["./src/*"]
    // }
    // --- END CRITICAL PART ---
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}